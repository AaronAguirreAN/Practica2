<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <!-- Exercici 2: Calculadora Aarón Aguirre-->

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorNavy"
            android:gravity="center"
            android:text="7"
            android:textColor="@color/colorWhite"
            android:textSize="30dp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorNavy"
            android:gravity="center"
            android:text="8"
            android:textColor="@color/colorWhite"
            android:textSize="30dp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorNavy"
            android:gravity="center"
            android:text="9"
            android:textColor="@color/colorWhite"
            android:textSize="30dp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorRed"
            android:gravity="center"
            android:text="÷"
            android:textColor="@color/colorWhite"
            android:textSize="30dp"></TextView>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorNavy"
            android:textSize="30dp"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:text="4"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorNavy"
            android:textSize="30dp"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:text="5"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorNavy"
            android:textSize="30dp"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:text="6"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorRed"
            android:textSize="30dp"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:text="x"></TextView>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorNavy"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/colorWhite"
            android:textSize="30dp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorNavy"
            android:textSize="30dp"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:text="2"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorNavy"
            android:textSize="30dp"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:text="3"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorRed"
            android:textSize="30dp"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:text="-"></TextView>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorNavy"
            android:gravity="center"
            android:text="."
            android:textColor="@color/colorWhite"
            android:textSize="30dp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorNavy"
            android:textSize="30dp"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:text="0"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorNavy"
            android:textSize="30dp"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:text="="></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorRed"
            android:textSize="30dp"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:text="+"></TextView>
    </TableRow>

</TableLayout>